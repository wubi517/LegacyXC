<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#20AFB6B6"/>

            <corners
                android:radius="@dimen/size_16dp"/>
            <size
                android:width="35dp"
                android:height="35dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#2060A2A2"/>

            <corners
                android:radius="@dimen/size_16dp"/>
            <size
                android:width="35dp"
                android:height="35dp"/>
        </shape>
    </item>
    <item>
        <ripple android:color="#20AFB6B6" />
    </item>
</selector>